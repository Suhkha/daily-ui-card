@media (max-width:768px)
  .card 
    margin 50px 5px
    
  .card__left
    padding 20px
    
@media (max-width:1024px)
  .card__right
    position relative
    height 400px
    border-radius 10px 10px 0 0
    right 0px
    top 0px
  
  .card__left
    width 100%
  
  .card__login
    span
      margin-left 20px
    
@media (min-width:1025px)
  .card__right
    bottom 0px
    border-radius 0 10px 10px 0
    position absolute
    right 0px
    top 0px
    width 40%
  
  .card__left
    width 60% 
      
    .card__login
      span
        margin-left 30px